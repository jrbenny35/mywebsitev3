div.container()
  md-content(layout-padding)
    md-card(layout-padding)
      md-card-header
        md-card-header-text( layout-margin)
          span.md-headline Title: {{ blog.title }}
          span.md-subhead Date: {{ blog.date | amDateFormat: 'dddd, MMMM Do YYYY' }}
          span.md-subhead Written by {{ blog.author }}
      div(layout='row' style='border-bottom: 1px solid #ba68c8;' layout-margin)
        img(src='images/{{blog.image}}' style='width: auto; height: 325px;')
        md-card-content(layout='column')
          div(style='max-height: 300px; min-height: 200px;')
            p.
              {{ blog.longPost }}
      div(layout='row' layout-margin )
        md-button.md-raised(ng-repeat='tags in blog.tag' ui-sref='{{ blog.tag }}' role='button') {{ tags }}
